<StackPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.LobbyController">
   <children>
      <Pane fx:id="lobby" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="897.0">
         <children>
            <ImageView blendMode="SRC_ATOP" fitHeight="650.0" fitWidth="1404.0" layoutX="-130.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/jesin.png" />
               </image>
            </ImageView>
            <Pane fx:id="mapPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="897.0" />
            <Pane fx:id="instructionsPane" layoutX="78.0" layoutY="21.0" prefHeight="66.0" prefWidth="445.0" />
            <Circle fx:id="redCircle" layoutX="843.0" layoutY="54.0" radius="40.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="2.0" style="-fx-opacity: .5;" />
            <Label fx:id="timerLabel" alignment="CENTER" layoutX="806.0" layoutY="20.0" prefHeight="69.0" prefWidth="75.0" textFill="WHITE">
               <font>
                  <Font name="Georgia Bold" size="18.0" />
               </font>
            </Label>
            <Button fx:id="btnGuess" layoutX="674.0" layoutY="29.0" mnemonicParsing="false" onAction="#onHandleGuessClick" style="-fx-border-width: 2; -fx-border-color: white;" stylesheets="@../css/style.css" text="Make a guess">
               <font>
                  <Font name="Georgia Bold" size="14.0" />
               </font>
            </Button>
            <Pane fx:id="clueMenu" layoutX="803.0" layoutY="103.0" prefHeight="336.0" prefWidth="80.0" />
            <Pane fx:id="chatPane" layoutY="350.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="250.0" prefWidth="897.0" />
            <ImageView fx:id="clock" fitHeight="87.0" fitWidth="109.0" layoutX="801.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/clockFrame.png" />
               </image>
               <effect>
                  <ColorAdjust brightness="1.0" />
               </effect>
            </ImageView>
            <Pane fx:id="mutePane" layoutX="830.0" layoutY="547.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="50.0" />
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#000000b2" height="29.0" layoutX="35.0" layoutY="22.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="164.0">
               <effect>
                  <BoxBlur height="0.0" width="52.81" />
               </effect>
            </Rectangle>
            <Label fx:id="nameLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="41.0" layoutY="16.0" prefHeight="42.0" prefWidth="152.0" text="The Lobby" textAlignment="CENTER" textFill="#d7ae19" wrapText="true">
               <font>
                  <Font name="Georgia Bold" size="18.0" />
               </font>
            </Label>
            <ImageView fx:id="mapClose" fitHeight="57.0" fitWidth="96.0" layoutX="25.0" layoutY="59.0" onMouseClicked="#handleMapClick" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/mapIcon.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </children>
</StackPane>
